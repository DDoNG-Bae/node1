extends layout

block scripts
    script(src='https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js')

block content
    form(actoin = '/board/:id/modify',method = 'post') 
        table
            tbody
                tr
                    td 이름
                    td
                         p= topics[0]._name
                tr
                    td 제목
                    td
                        input(type='text',name = 'title', size = '50', value=topics[0]._title)
                tr
                    td(colspan='2')
                        textarea#editor(name='content')
                            != topics[0]._content
        input(type='submit')
    script.
        ClassicEditor
            .create( document.querySelector( '#editor' ) )
            .then( editor => {
                console.log( editor );
            } )
            .catch( error => {
                console.error( error );
            } );